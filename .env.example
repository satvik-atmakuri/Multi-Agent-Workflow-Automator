# OpenAI API Key (Required)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (Optional - for Claude models)
# Get your key from: https://console.anthropic.com/

# Brave Search API Key (Required for fresh search)
# Get your key from: https://brave.com/search/api/
BRAVE_SEARCH_API_KEY=BSPA-xxxxxxxxxxxxxxxxxxxx

# Search Configuration
SEARCH_PROVIDER=brave  # brave, ddg, mock
ENABLE_WEB_SEARCH=true

# Model Configuration
DEFAULT_MODEL=gpt-4o-mini

# Caching
CACHE_ENABLED=true
CACHE_THRESHOLD=0.95

# Database Configuration (matches docker-compose.yml)
DATABASE_URL=postgresql://workflow_user:workflow_pass@localhost:5432/workflow_db

# Application Settings
APP_ENV=development
LOG_LEVEL=info

# CORS Origins (for frontend)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
